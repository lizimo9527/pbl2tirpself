.community-container {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	background-color: #f5f5f5;
}

.community-header {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	padding: 60rpx 30rpx 40rpx;
	color: white;
}

.header-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
}

.page-title {
	font-size: 48rpx;
	font-weight: bold;
	margin-bottom: 15rpx;
}

.page-subtitle {
	font-size: 28rpx;
	opacity: 0.9;
}

.search-section {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 1rpx solid #eeeeee;
}

.search-container {
	display: flex;
	align-items: center;
	gap: 20rpx;
}

.search-input {
	flex: 1;
	height: 70rpx;
	border: 1rpx solid #dddddd;
	border-radius: 35rpx;
	padding: 0 30rpx;
	font-size: 28rpx;
	background-color: #fafafa;
}

.search-btn {
	height: 70rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	color: white;
	border: none;
	border-radius: 35rpx;
	padding: 0 40rpx;
	font-size: 28rpx;
}

.main-content {
	padding: 40rpx 30rpx;
}

.section {
	margin-bottom: 60rpx;
}

.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;
}

.section-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333333;
}

.view-all {
	font-size: 26rpx;
	color: #667eea;
}

.category-grid {
	display: flex;
	flex-wrap: nowrap;
	gap: 15rpx;
	justify-content: space-between;
}

.category-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20rpx 10rpx;
	background-color: #f8f9fa;
	border: 1rpx solid #e9ecef;
	border-radius: 12rpx;
	width: calc(25% - 12rpx);
	box-sizing: border-box;
	color: #333333;
}

.category-icon {
	font-size: 36rpx;
	margin-bottom: 12rpx;
	color: #1A9E8F;
}

.category-name {
	font-size: 24rpx;
	font-weight: 600;
	margin-bottom: 6rpx;
	color: #333333;
}

.category-count {
	font-size: 18rpx;
	color: #666666;
	opacity: 0.8;
}

.style-grid {
	display: flex;
	flex-wrap: wrap;
	gap: 20rpx;
}

.style-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 25rpx 15rpx;
	background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
	border-radius: 15rpx;
	width: calc(33.333% - 14rpx);
	box-sizing: border-box;
	color: white;
}

.style-icon {
	font-size: 48rpx;
	margin-bottom: 10rpx;
}

.style-name {
	font-size: 24rpx;
	font-weight: bold;
	margin-bottom: 5rpx;
}

.style-desc {
	font-size: 20rpx;
	opacity: 0.9;
}

.posts-list {
	display: flex;
	flex-direction: column;
	gap: 25rpx;
}

.post-item {
	background-color: #ffffff;
	border-radius: 15rpx;
	padding: 30rpx;
	border: 1rpx solid #eeeeee;
}

.post-header {
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}

.author-avatar {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 15rpx;
}

.author-info {
	display: flex;
	flex-direction: column;
}

.author-name {
	font-size: 26rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 5rpx;
}

.post-time {
	font-size: 22rpx;
	color: #999999;
}

.post-content {
	margin-bottom: 20rpx;
}

.post-title {
	font-size: 28rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 10rpx;
	display: block;
}

.post-excerpt {
	font-size: 24rpx;
	color: #666666;
	line-height: 1.5;
}

.post-footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.post-stats {
	display: flex;
	gap: 20rpx;
}

.stat-item {
	font-size: 22rpx;
	color: #999999;
}

.post-tag {
	font-size: 22rpx;
	color: #667eea;
	background-color: #f0f4ff;
	padding: 5rpx 15rpx;
	border-radius: 12rpx;
}

.publish-fab {
	position: fixed;
	right: 40rpx;
	bottom: 40rpx;
	width: 100rpx;
	height: 100rpx;
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.fab-icon {
	font-size: 40rpx;
	color: white;
	font-weight: bold;
}