.create-container {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	background-color: #f5f5f5;
}

.create-header {
	background-color: #ffffff;
	padding: 30rpx;
	border-bottom: 1rpx solid #eeeeee;
}

.create-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333333;
}

.form-section {
	flex: 1;
	padding: 30rpx;
	background-color: #ffffff;
	margin-top: 20rpx;
}

.form-item {
	margin-bottom: 40rpx;
}

.form-label {
	font-size: 30rpx;
	font-weight: 500;
	color: #333333;
	margin-bottom: 20rpx;
	display: block;
}

.form-input {
	width: 100%;
	height: 80rpx;
	border: 1rpx solid #dddddd;
	border-radius: 8rpx;
	padding: 0 20rpx;
	font-size: 28rpx;
	background-color: #fafafa;
}

.form-textarea {
	width: 100%;
	height: 200rpx;
	border: 1rpx solid #dddddd;
	border-radius: 8rpx;
	padding: 20rpx;
	font-size: 28rpx;
	background-color: #fafafa;
	line-height: 1.5;
}

.image-upload {
	display: flex;
	align-items: center;
}

.upload-btn {
	width: 160rpx;
	height: 160rpx;
	border: 2rpx dashed #cccccc;
	border-radius: 8rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #fafafa;
}

.upload-icon {
	font-size: 48rpx;
	color: #999999;
	margin-bottom: 10rpx;
}

.upload-text {
	font-size: 24rpx;
	color: #666666;
}

.image-preview {
	position: relative;
	margin-left: 20rpx;
}

.preview-image {
	width: 160rpx;
	height: 160rpx;
	border-radius: 8rpx;
}

.remove-btn {
	position: absolute;
	top: -10rpx;
	right: -10rpx;
	width: 40rpx;
	height: 40rpx;
	background-color: #ff4444;
	color: white;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
}

.tags-container {
	border: 1rpx solid #dddddd;
	border-radius: 8rpx;
	padding: 20rpx;
	background-color: #fafafa;
}

.tag-input-container {
	margin-bottom: 20rpx;
}

.tag-input {
	width: 100%;
	height: 60rpx;
	border: 1rpx solid #dddddd;
	border-radius: 4rpx;
	padding: 0 20rpx;
	font-size: 26rpx;
	background-color: #ffffff;
}

.tags-list {
	display: flex;
	flex-wrap: wrap;
	gap: 15rpx;
}

.tag-item {
	display: flex;
	align-items: center;
	background-color: #e6f7ff;
	border: 1rpx solid #91d5ff;
	border-radius: 20rpx;
	padding: 10rpx 20rpx;
}

.tag-text {
	font-size: 24rpx;
	color: #1890ff;
	margin-right: 10rpx;
}

.tag-remove {
	font-size: 20rpx;
	color: #1890ff;
	font-weight: bold;
}

	/* 地图模块样式 */
	.map-section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 15rpx;
	}

	.map-controls {
		display: flex;
		gap: 10rpx;
	}

	.map-control-btn {
		background-color: #1A9E8F;
		color: white;
		border-radius: 8rpx;
		padding: 10rpx 20rpx;
		font-size: 24rpx;
		border: none;
	}

	.map-container {
		background-color: white;
		border-radius: 15rpx;
		padding: 20rpx;
		border: 2rpx solid #e5e5e5;
	}

	.map-placeholder {
		height: 250rpx;
		background: linear-gradient(135deg, #e3f2fd 0%, #f3e5f5 100%);
		border-radius: 10rpx;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		border: 2rpx dashed #1A9E8F;
		margin-bottom: 15rpx;
	}

	.map-icon {
		font-size: 60rpx;
		margin-bottom: 15rpx;
	}

	.map-text {
		font-size: 26rpx;
		font-weight: bold;
		color: #333;
		margin-bottom: 8rpx;
	}

	.map-desc {
		font-size: 20rpx;
		color: #666;
		text-align: center;
	}

	.map-coordinates {
		margin-top: 15rpx;
		padding: 10rpx;
		background-color: rgba(26, 158, 143, 0.1);
		border-radius: 8rpx;
		text-align: center;
	}

	.coordinate-text {
		font-size: 18rpx;
		color: #1A9E8F;
		display: block;
		margin: 2rpx 0;
	}

	.map-actions {
		display: flex;
		gap: 10rpx;
		justify-content: center;
	}

	.map-action-btn {
		background-color: #f8f9fa;
		color: #666;
		border: 1rpx solid #ddd;
		border-radius: 8rpx;
		padding: 12rpx 20rpx;
		font-size: 22rpx;
	}

	.map-action-btn:first-child {
		background-color: #1A9E8F;
		color: white;
		border: none;
	}

.action-buttons {
	display: flex;
	gap: 20rpx;
	padding: 30rpx;
	background-color: #ffffff;
	border-top: 1rpx solid #eeeeee;
}

.save-btn {
	flex: 1;
	height: 80rpx;
	background-color: #f5f5f5;
	color: #666666;
	border: 1rpx solid #dddddd;
	border-radius: 8rpx;
	font-size: 28rpx;
}

.publish-btn {
	flex: 1;
	height: 80rpx;
	background-color: #1890ff;
	color: #ffffff;
	border: none;
	border-radius: 8rpx;
	font-size: 28rpx;
}