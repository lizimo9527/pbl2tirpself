<!--pages/index/index.wxml-->
<view class="home-container">
	<!-- 欢迎信息栏 -->
	<view class="welcome-bar">
		<view class="welcome-info">
			<image class="user-avatar" src="/static/images/default-avatar.png" mode="aspectFill"></image>
			<view class="user-details">
				<text class="user-name">欢迎使用TripSelf</text>
				<text class="user-welcome">开始规划您的完美旅程</text>
			</view>
		</view>
	</view>
	
	<!-- 英雄区域 -->
	<view class="header-bg">
		<view class="header-content">
			<text class="app-title">发现你的专属旅行方式</text>
			<text class="app-subtitle">TripSelf - 旅行自助服务平台</text>
			<view class="hero-buttons">
				<button class="start-planning-btn" bindtap="startPlanning" hover-class="button-hover">
					<text>✏️ 开始制作攻略</text>
				</button>
			</view>
		</view>
	</view>
	
	<!-- 主要内容区域 -->
	<view class="main-content">
		<!-- 攻略制作特色（调换到上面位置，使用一行样式） -->
		<view class="section">
			<view class="section-header">
				<text class="section-title">特色功能</text>
			</view>
			<view class="planning-guide">
				<view class="guide-item" bindtap="showRoutePlanning" hover-class="guide-item-hover">
					<view class="guide-icon">🗺️</view>
					<view class="guide-content">
						<text class="guide-title">智能路线规划</text>
					</view>
				</view>
				<view class="guide-item" bindtap="showBudgetManagement" hover-class="guide-item-hover">
					<view class="guide-icon">💰</view>
					<view class="guide-content">
						<text class="guide-title">预算管理</text>
					</view>
				</view>
				<view class="guide-item" bindtap="showTimeArrangement" hover-class="guide-item-hover">
					<view class="guide-icon">📅</view>
					<view class="guide-content">
						<text class="guide-title">时间安排</text>
					</view>
				</view>
			</view>
		</view>
		
		<!-- 制作攻略引导区域（移动到页面底部，使用两行两列样式） -->
		<view style="position: fixed; bottom: 100rpx; left: 0; right: 0; padding: 40rpx 30rpx; background: white; z-index: 1000; border-top: 2rpx solid #e9ecef;">
			<view class="section-header">
				<text class="section-title">功能入口</text>
			</view>
			<view class="features-grid">
				<view class="feature-item" bindtap="startPlanning">
					<view class="feature-icon">📝</view>
					<text class="feature-title">创建新攻略</text>
				</view>
				<view class="feature-item" bindtap="viewMyPlans">
					<view class="feature-icon">📂</view>
					<text class="feature-title">我的攻略</text>
				</view>
				<view class="feature-item" bindtap="viewTemplates">
					<view class="feature-icon">📋</view>
					<text class="feature-title">攻略模板</text>
				</view>
				<view class="feature-item" bindtap="startAIChat">
					<view class="feature-icon">🚀</view>
					<text class="feature-title">一键定制旅行</text>
				</view>
			</view>
		</view>
	</view>
</view>