.home-container {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	background-color: #ffffff;
}

.welcome-bar {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	padding: 30rpx 30rpx 40rpx;
	color: white;
}

.welcome-info {
	display: flex;
	align-items: center;
}

.user-avatar {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
	border: 2rpx solid rgba(255,255,255,0.3);
}

.user-details {
	display: flex;
	flex-direction: column;
}

.user-name {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 8rpx;
}

.user-welcome {
	font-size: 24rpx;
	opacity: 0.9;
}

.header-bg {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	padding: 60rpx 30rpx;
	color: white;
}

.header-content {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
}

.app-title {
	font-size: 48rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}

.app-subtitle {
	font-size: 28rpx;
	opacity: 0.9;
	margin-bottom: 40rpx;
}

.hero-buttons {
	display: flex;
	justify-content: center;
}

.start-planning-btn {
	background: rgba(255,255,255,0.2);
	border: 2rpx solid rgba(255,255,255,0.5);
	border-radius: 50rpx;
	padding: 20rpx 40rpx;
	color: white;
	font-size: 28rpx;
	font-weight: bold;
}

.button-hover {
	background: rgba(255,255,255,0.3);
}

.main-content {
	padding: 40rpx 30rpx 0;
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	min-height: calc(100vh - 500rpx - 200rpx);
}

.section {
	margin-bottom: 60rpx;
}

.section:first-child {
	margin-bottom: 40rpx;
}

.section:last-child {
	position: fixed !important;
	bottom: 100rpx !important;
	left: 0 !important;
	right: 0 !important;
	margin: 0 !important;
	padding: 40rpx 30rpx !important;
	z-index: 1000 !important;
	background: linear-gradient(to bottom, rgba(255,255,255,0.95), #ffffff) !important;
	backdrop-filter: blur(10rpx) !important;
	border-top: 2rpx solid rgba(0,0,0,0.1) !important;
}

.section-header {
	margin-bottom: 30rpx;
}

.section-title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333333;
}

.planning-guide {
	display: flex;
	flex-direction: column;
}

.guide-item {
	display: flex;
	align-items: center;
	padding: 30rpx;
	background-color: #f8f9fa;
	border-radius: 20rpx;
	border: 2rpx solid #e9ecef;
	margin-bottom: 20rpx;
}

.guide-item:last-child {
	margin-bottom: 0;
}

.guide-item-hover {
	background-color: #e9ecef;
	transform: scale(0.98);
}

.guide-icon {
	font-size: 48rpx;
	margin-right: 20rpx;
}

.guide-content {
	display: flex;
	flex-direction: column;
	flex: 1;
}

.guide-title {
	font-size: 28rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 8rpx;
}

.guide-desc {
	font-size: 22rpx;
	color: #666666;
}

.features-grid {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.feature-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
	padding: 25rpx 15rpx;
	background-color: #f8f9fa;
	border-radius: 15rpx;
	width: 48%;
	margin-bottom: 20rpx;
	box-sizing: border-box;
}

.feature-item:nth-child(2n) {
	margin-right: 0;
}

.feature-icon {
	font-size: 40rpx;
	margin-bottom: 15rpx;
}

.feature-title {
	font-size: 24rpx;
	font-weight: bold;
	color: #333333;
	margin-bottom: 8rpx;
}

.feature-desc {
	font-size: 20rpx;
	color: #666666;
	line-height: 1.4;
}

/* 强制功能入口区域在底部 - 针对WXML实际结构 */
.main-content > .section:last-child {
	position: absolute !important;
	bottom: 100rpx !important;
	left: 0 !important;
	right: 0 !important;
	margin-top: 0 !important;
	margin-bottom: 0 !important;
	padding: 40rpx 30rpx !important;
	z-index: 1000 !important;
	background-color: #ffffff !important;
}

/* 确保主内容区域有足够空间 */
.main-content {
	position: relative !important;
	min-height: 100vh !important;
	padding-bottom: 300rpx !important;
}

/* 确保页面容器能够滚动 */
.home-container {
	min-height: 100vh !important;
	position: relative !important;
}