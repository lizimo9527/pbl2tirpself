.map-container {
	min-height: 100vh;
	background-color: #ffffff;
	padding: 30rpx;
}

.header {
	text-align: center;
	margin-bottom: 40rpx;
}

.title {
	font-size: 36rpx;
	font-weight: bold;
	color: #333333;
	display: block;
	margin-bottom: 10rpx;
}

.subtitle {
	font-size: 24rpx;
	color: #666666;
	display: block;
}

.map-content {
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 400rpx;
}

.placeholder-map {
	text-align: center;
}

.map-icon {
	font-size: 80rpx;
	display: block;
	margin-bottom: 20rpx;
}

.map-text {
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	display: block;
	margin-bottom: 10rpx;
}

.map-desc {
	font-size: 24rpx;
	color: #666666;
	display: block;
}

.action-buttons {
	margin-top: 40rpx;
	display: flex;
	justify-content: center;
}

.action-btn {
	background-color: #1A9E8F;
	color: white;
	border: none;
	border-radius: 10rpx;
	padding: 20rpx 40rpx;
	font-size: 28rpx;
}