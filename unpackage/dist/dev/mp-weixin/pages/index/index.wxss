
	/* 全局样式 */
.home-container {
		min-height: 100vh;
		background-color: #f5f7fa;
}
	
	/* 欢迎区域样式 */
.welcome-bar {
		background: linear-gradient(135deg, #2a9d8f 0%, #264653 100%);
		padding: 30rpx 30rpx 40rpx;
		color: white;
}
.welcome-info {
		display: flex;
		align-items: center;
}
.app-logo {
		width: 90rpx;
		height: 90rpx;
		background-color: rgba(255, 255, 255, 0.2);
		border-radius: 50%;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-right: 25rpx;
}
.logo-icon {
		font-size: 48rpx;
}
.user-details {
		display: flex;
		flex-direction: column;
}
.user-name {
		font-size: 34rpx;
		font-weight: bold;
		margin-bottom: 8rpx;
}
.user-welcome {
		font-size: 26rpx;
		opacity: 0.9;
}
	
	/* 英雄区域样式 */
.header-bg {
		background: linear-gradient(135deg, #2a9d8f 0%, #264653 100%);
		padding: 60rpx 30rpx;
		color: white;
}
.header-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
}
.app-title {
		font-size: 48rpx;
		font-weight: bold;
		margin-bottom: 20rpx;
}
.app-subtitle {
		font-size: 28rpx;
		opacity: 0.9;
		margin-bottom: 40rpx;
}
.hero-buttons {
		display: flex;
		justify-content: center;
}
.start-planning-btn {
		background: white;
		color: #2a9d8f;
		border-radius: 50rpx;
		padding: 20rpx 60rpx;
		font-size: 28rpx;
		font-weight: bold;
		display: flex;
		align-items: center;
}
.btn-icon {
		font-size: 32rpx;
		margin-right: 15rpx;
}
	
	/* 主要内容区域样式 */
.main-content {
		padding: 40rpx 30rpx;
}
.section {
		margin-bottom: 60rpx;
}
.section-header {
		margin-bottom: 30rpx;
}
.section-title {
		font-size: 36rpx;
		font-weight: bold;
		color: #264653;
		position: relative;
		padding-left: 15rpx;
}
.section-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 6rpx;
		height: 30rpx;
		background-color: #2a9d8f;
		border-radius: 3rpx;
}
	
	/* 规划引导区域样式 */
.planning-guide {
		display: flex;
		flex-direction: column;
}
.guide-item {
		display: flex;
		align-items: center;
		padding: 30rpx;
		background-color: white;
		border-radius: 20rpx;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
		margin-bottom: 20rpx;
}
.guide-icon {
		font-size: 48rpx;
		color: #2a9d8f;
		margin-right: 25rpx;
		width: 50rpx;
		text-align: center;
}
.guide-content {
		display: flex;
		flex-direction: column;
		flex: 1;
}
.guide-title {
		font-size: 30rpx;
		font-weight: bold;
		color: #264653;
		margin-bottom: 5rpx;
}
.guide-desc {
		font-size: 24rpx;
		color: #6c757d;
}
.guide-arrow {
		font-size: 28rpx;
		color: #adb5bd;
}
	
	/* 特色功能区域样式 - 两行两列式分布 */
.features-grid {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		margin-top: 20rpx;
}
.feature-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		padding: 35rpx 20rpx;
		background-color: white;
		border-radius: 20rpx;
		width: 48%;
		box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
		height: 200rpx;
		justify-content: center;
		box-sizing: border-box;
		margin-bottom: 20rpx;
}
.feature-icon {
		font-size: 50rpx;
		color: #2a9d8f;
		margin-bottom: 20rpx;
}
.feature-title {
		font-size: 26rpx;
		font-weight: bold;
		color: #264653;
		margin-bottom: 10rpx;
}
.feature-desc {
		font-size: 22rpx;
		color: #6c757d;
		line-height: 1.5;
}
