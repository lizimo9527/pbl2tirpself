<view class="map-container"><view class="header"><text class="title">地图导航</text><text class="subtitle">查看旅行路线和目的地</text></view><view class="map-controls"><button class="control-btn" bindtap="{{a}}"><text class="control-icon">📍</text><text class="control-text">定位</text></button><button class="control-btn" bindtap="{{b}}"><text class="control-icon">🔍</text><text class="control-text">搜索</text></button><button class="control-btn" bindtap="{{c}}"><text class="control-icon">🛣️</text><text class="control-text">路线</text></button></view><view class="map-content"><map id="tencentMap" longitude="{{d}}" latitude="{{e}}" scale="{{f}}" markers="{{g}}" polyline="{{h}}" show-location="{{true}}" enable-zoom="{{true}}" enable-scroll="{{true}}" enable-rotate="{{false}}" enable-overlooking="{{false}}" enable-satellite="{{false}}" enable-traffic="{{false}}" class="tencent-map" bindregionchange="{{i}}" bindmarkertap="{{j}}" bindcallouttap="{{k}}" bindcontroltap="{{l}}" bindtap="{{m}}"></map><view wx:if="{{n}}" class="map-loading"><text class="loading-text">地图加载中...</text></view></view><view wx:if="{{o}}" class="location-info"><text class="location-title">当前位置</text><text class="location-address">{{p}}</text><text class="location-coords"> 经度: {{q}}, 纬度: {{r}}</text></view><view class="action-buttons"><button class="action-btn" bindtap="{{s}}"><text>返回首页</text></button></view><view wx:if="{{t}}" class="modal"><view class="modal-content"><view class="modal-header"><text class="modal-title">搜索地点</text><button class="close-btn" bindtap="{{v}}">×</button></view><view class="search-input"><input placeholder="输入地点名称或地址" class="search-field" bindconfirm="{{w}}" value="{{x}}" bindinput="{{y}}"/><button class="search-btn" bindtap="{{z}}">搜索</button></view><view class="search-results"><view wx:for="{{A}}" wx:for-item="result" wx:key="c" class="search-result" bindtap="{{result.d}}"><text class="result-name">{{result.a}}</text><text class="result-address">{{result.b}}</text></view></view></view></view></view>