
.user-container {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background-color: #ffffff;
}
.user-header {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 60rpx 30rpx 40rpx;
		color: white;
}
.header-content {
		display: flex;
		align-items: center;
		margin-bottom: 40rpx;
}
.user-avatar {
		width: 120rpx;
		height: 120rpx;
		border-radius: 50%;
		margin-right: 30rpx;
		border: 4rpx solid rgba(255,255,255,0.3);
}
.user-info {
		flex: 1;
		display: flex;
		flex-direction: column;
}
.user-name {
		font-size: 36rpx;
		font-weight: bold;
		margin-bottom: 10rpx;
}
.user-level {
		font-size: 24rpx;
		opacity: 0.9;
		margin-bottom: 8rpx;
}
.user-desc {
		font-size: 22rpx;
		opacity: 0.8;
}
.user-stats {
		display: flex;
		justify-content: space-around;
}
.stat-item {
		display: flex;
		flex-direction: column;
		align-items: center;
}
.stat-number {
		font-size: 32rpx;
		font-weight: bold;
		margin-bottom: 5rpx;
}
.stat-label {
		font-size: 22rpx;
		opacity: 0.9;
}
.main-content {
		flex: 1;
		padding: 30rpx;
}
.section {
		margin-bottom: 40rpx;
}
.section-header {
		margin-bottom: 25rpx;
}
.section-title {
		font-size: 32rpx;
		font-weight: bold;
		color: #333333;
}
.function-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 20rpx;
}
.function-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 25rpx 15rpx;
		background-color: #f8f9fa;
		border-radius: 15rpx;
		width: calc(50% - 10rpx);
		box-sizing: border-box;
}
.function-item-hover {
		background-color: #e9ecef;
		transform: scale(0.98);
}
.function-icon {
		font-size: 48rpx;
		margin-bottom: 15rpx;
}
.function-name {
		font-size: 24rpx;
		font-weight: bold;
		color: #333333;
}
	
	/* 热门分类样式 */
.category-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 20rpx;
}
.category-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 25rpx 15rpx;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 15rpx;
		width: calc(25% - 15rpx);
		box-sizing: border-box;
		color: white;
}
.category-item-hover {
		transform: scale(0.98);
		background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
}
.category-icon {
		font-size: 48rpx;
		margin-bottom: 15rpx;
}
.category-name {
		font-size: 24rpx;
		font-weight: bold;
}
	
	/* 旅行风格样式 */
.style-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 20rpx;
}
.style-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 25rpx 15rpx;
		background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
		border-radius: 15rpx;
		width: calc(33.33% - 14rpx);
		box-sizing: border-box;
		color: white;
}
.style-item-hover {
		transform: scale(0.98);
		background: linear-gradient(135deg, #e882f0 0%, #e94c63 100%);
}
.style-icon {
		font-size: 48rpx;
		margin-bottom: 10rpx;
}
.style-name {
		font-size: 24rpx;
		font-weight: bold;
		margin-bottom: 5rpx;
}
.style-desc {
		font-size: 20rpx;
		opacity: 0.9;
}
.settings-list {
		display: flex;
		flex-direction: column;
		gap: 0;
		background-color: #f8f9fa;
		border-radius: 15rpx;
		overflow: hidden;
}
.setting-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 30rpx 25rpx;
		background-color: white;
		border-bottom: 2rpx solid #f0f0f0;
}
.setting-item:last-child {
		border-bottom: none;
}
.setting-item-hover {
		background-color: #f5f5f5;
}
.setting-left {
		display: flex;
		align-items: center;
}
.setting-icon {
		font-size: 32rpx;
		margin-right: 20rpx;
}
.setting-name {
		font-size: 28rpx;
		color: #333333;
}
.setting-arrow {
		font-size: 28rpx;
		color: #999999;
}
.logout-section {
		margin-top: 40rpx;
}
.logout-btn {
		width: 100%;
		height: 80rpx;
		background-color: #ff4444;
		color: white;
		border-radius: 10rpx;
		font-size: 28rpx;
		font-weight: bold;
		border: none;
}
